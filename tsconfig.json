{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "types": ["vitest/importMeta"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
